{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["apps/docs-app/src/app/*"],
      "@cognizone/application-profile": ["libs/application-profile/src/index.ts"],
      "@cognizone/devtools": ["libs/devtools/src/index.ts"],
      "@cognizone/elastic": ["libs/elastic/src/index.ts"],
      "@cognizone/elastic-explorer": ["libs/elastic-explorer/src/index.ts"],
      "@cognizone/i18n": ["libs/i18n/src/index.ts"],
      "@cognizone/i18n-transloco": ["libs/i18n-transloco/src/index.ts"],
      "@cognizone/json-model": ["libs/json-model/src/index.ts"],
      "@cognizone/json-model-graph": ["libs/json-model-graph/src/index.ts"],
      "@cognizone/legi-cv": ["libs/legi-cv/src/index.ts"],
      "@cognizone/legi-shared": ["libs/legi-shared/src/index.ts"],
      "@cognizone/legi-shared/*": ["libs/legi-shared/*"],
      "@cognizone/material-icons": ["libs/material-icons/src/index.ts"],
      "@cognizone/model-utils": ["libs/model-utils/src/index.ts"],
      "@cognizone/ng-application-profile": ["libs/ng-application-profile/src/index.ts"],
      "@cognizone/ng-core": ["libs/ng-core/src/index.ts"],
      "@cognizone/ng-yasgui": ["libs/ng-yasgui/src/index.ts"],
      "@cognizone/operation": ["libs/operation/src/index.ts"],
      "@cognizone/permissions": ["libs/permissions/src/index.ts"],
      "@cognizone/shacl": ["libs/shacl/src/index.ts"],
      "@cognizone/shacl/*": ["libs/shacl/*"],
      "@cognizone/transloco-langstring": ["libs/transloco-langstring/src/index.ts"],
      "@cognizone/user-action": ["libs/user-action/src/index.ts"],
      "@czee-ce/*": ["apps/elastic-explorer-chrome-extension/src/app/*"],
      "@czee-ce/env/*": ["apps/elastic-explorer-chrome-extension/src/environments/*"],
      "@shfp/*": ["apps/shacl-form-playground/src/app/*"],
      "@shfp/env/*": ["apps/shacl-form-playground/src/environments/*"],
      "@env/*": ["apps/docs-app/src/environments/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": false,
    "strictInjectionParameters": false,
    "strictTemplates": false
  },
  "exclude": ["node_modules", "tmp"]
}
